.col-xs-12
  %h1.page-header Dashboard
  .row
    .col-xs-12.col-sm-6
      %h1 Listing Orgs
      .table-responsive
        %table.table.table-striped
          %thead
            %tr
              %th Name
              %th Subdomain
              %th{ colspan: "3" }
          %tbody
            - @orgs.each do |org|
              %tr
                %td= org.name
                %td= link_to org.subdomain, root_url(subdomain: org.subdomain)
                %td= link_to 'Show', org
                %td= link_to 'Edit', edit_org_path(org)
                %td= link_to 'Destroy', org, method: :delete, data: { confirm: 'Are you sure?' }
      %br/
      = link_to 'New Org', new_org_path
      |
      = link_to 'New Event', new_event_path
      %br/
    .col-xs-12.col-sm-6
      .col-xs-12
        %h2 Search Events
        = render 'search_form'
      .col-xs-12
        %p#notice= notice
        - if @found_events
          %h1  Search Events Listing
          .table-responsive
            %table.table.table-striped
              %thead
                %tr
                  %th Name
                  %th Host
                  %th Date
                  %th{ colspan: "3" }
              %tbody
                - @found_events.each do |event|
                  %tr
                    %td= event.name
                    %td= event.host
                    %td= event.date
                    %td= link_to 'Show', event
                    %td= link_to 'Edit', edit_event_path(event)
                    %td= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }
